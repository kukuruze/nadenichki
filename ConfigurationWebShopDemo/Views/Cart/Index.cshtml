@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead style="color: white; text-align:center">
                <tr>
                    <th>
                        Model
                    </th>
                    <th>
                        Type
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Quantity
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%" style="color: white">@obj.Model</td>
                        <td width="10%" style="color: white">@obj.Type</td>
                        <td width="30%" style="color: white">@obj.Price.00 лв.</td>
                        <td width="10%" style="color: white">@obj.Quantity</td>

                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Cart" asp-route-Id="@obj.Id" asp-action="RemoveFromCart" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                    Remove From Cart
                                </a>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <div class="container p-3">
            <a style="text-align:Left; color:white">Обща цена: @Model.Sum(x => x.Price * x.Quantity).00 лв.</a>
        </div>
        <div class="w-75 btn-group" role="group">
            <a asp-controller="Home" asp-action="Order" class="btn btn-primary mx-2">
                <i class="fas fa-edit">Поръчване!</i>
            </a>
        </div>

    }
    else
    {
        <p style="color: white; text-align: center; font-size: xx-large">Количката е празна</p>
    }
</div>
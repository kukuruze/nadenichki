@model IEnumerable<ConfigurationWebShopDemo.Models.Configurations>
@{
    ViewData["Title"] = "ConfigurationsView";
}

<div class="container p-3">
    @if( Model.Count() >0)
            {
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead style="color: white; text-align:center">
                        <tr>
                            <th>
                                Motherboard Name
                            </th>
                            <th>
                                SSD
                            </th>
                            <th>
                                HDD
                            </th>
                            <th>
                                RAM
                            </th>
                            <th>
                                CPU
                            </th>
                            <th>
                                GPU
                            </th>
                            <th>
                                Sound Card
                            </th>
                            <th>
                                WWAN Card
                            </th>
                            <th>
                                Computer Case
                            </th>
                            <th>
                                Price
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var obj in Model)
                {
                        <tr>
                            <td width="10%" style="color: white">@obj.Mother_Board</td>
                            <td width="10%" style="color: white">@obj.SSD</td>
                            <td width="10%" style="color: white">@obj.HDD</td>
                            <td width="10%" style="color: white">@obj.RAM</td>
                            <td width="15%" style="color: white">@obj.CPU</td>
                            <td width="15%" style="color: white">@obj.GPU</td>
                            <td width="20%" style="color: white">@obj.Sound_Card</td>
                            <td width="15%" style="color: white">@obj.WWAN_Card</td>
                            <td width="20%" style="color: white">@obj.Computer_Case</td>
                            <td width="10%" style="color: white">@obj.Price</td>
                        </tr>
                }
                    </tbody>
                </table>
            }
            else
            {
                <p>Изчерпани са количествата</p>
            }
</div>


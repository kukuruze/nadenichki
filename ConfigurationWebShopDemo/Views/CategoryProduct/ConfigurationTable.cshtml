@model IEnumerable<ConfigurationWebShopDemo.Models.Configurations>
@Logged.LoggedIn
@{
    ViewData["Title"] = "ConfigurationsView";
}

<div class="container p-3">
    @if( Model.Count() >0)
            {
                <table class="table table-bordered table-striped" style="width:100%" color ="white">
                    <thead>
                        <tr>
                            <th style="color:white">
                                Configuration ID
                            </th>
                            <th style="color:white">
                                CPU
                            </th>
                            <th style="color:white">
                                GPU
                            </th>
                            <th style="color:white">
                                RAM
                            </th>
                            <th style="color:white">
                                HDD
                            </th>
                            <th style="color:white">
                                SSD
                            </th>
                            <th style="color:white">
                                Motherboard
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var obj in Model)
                {
                        <tr>
                            <td width="5%" style="color:white">@(obj.Configuration_Id-1)</td>
                            <td width="10%" style="color:white">@obj.CPU</td>
                            <td width="10%" style="color:white">@obj.GPU</td>
                            <td width="10%" style="color:white">@obj.RAM</td>
                            <td width="10%" style="color:white">@obj.HDD</td>
                            <td width="10%" style="color:white">@obj.SSD</td>
                            <td width="10%" style="color:white">@obj.Mother_Board</td>
                            @if(Logged.LoggedIn == true)
                    {
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-route-Id="@obj.Configuration_Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                    Edit
                                </a>
                                <a asp-controller="Category" asp-route-Id="@obj.Configuration_Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="far fa-trash-alt"></i>
                                    Create
                                </a>
                            </div>
                        </td>
                    }
                            
                        </tr>
                }
                    </tbody>
                </table>
            }
            else
            {
                <p>Изчерпани са количествата</p>
            }
</div>


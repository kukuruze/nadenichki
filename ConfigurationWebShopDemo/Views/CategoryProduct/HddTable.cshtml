@model IEnumerable<ConfigurationWebShopDemo.Models.HDDs>

@{
    ViewData["Title"] = "HddTable";
}

<div class="container p-3">
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead style="color: white; text-align:center">
                <tr>
                    <th>
                        Model HDD
                    </th>
                    <th>
                        HDD Price
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="50%" style="color: white">@obj.hdd_capacity TB</td>
                    <td width="50%" style="color: white">@obj.hdd_price лв.</td>
                    @if (Logged.LoggedIn == true)
                    {
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Cart" asp-route-Id="@obj.hdd_id" asp-action="AddToCartHDD" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                    Add To Cart
                                </a>
                            </div>
                        </td>
                    }
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p style="color: white">Изчерпани са количествата</p>
    }
</div>

@model IEnumerable<ConfigurationWebShopDemo.Models.Mother_Boards>
@{
    ViewData["Title"] = "MotherboardTable";
}

<h1 style="color:white">MotherboardTable View</h1>
<h2 style="color:white">Import Database from Motherboard Table</h2>

<div class="container p-3">
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead style="color: white; text-align:center">
                <tr>
                    <th>
                        Model Mother Board
                    </th>
                    <th>
                        Mother Board Price
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%" style="color: white">@obj.mother_board_model</td>
                        <td width="50%" style="color: white">@obj.mother_board_price</td>

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Изчерпани са количествата</p>
    }
</div>

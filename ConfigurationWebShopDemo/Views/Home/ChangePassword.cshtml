@model ConfigurationWebShopDemo.Models.SignUp
@{
    ViewData["Title"] = "Forgot Password";
}

<div align="center">
    <form method="post">
        <div class="container">
            <div align="center">
                <b>
                    <label type="text" style="font-size: 40px; text-align: center">
                        Login
                    </label>
                </b>
            </div>
            <input asp-for="Password" class="form-control" placeholder="New password" required />
            <span asp-validation-for="Password" class="text-danger"></span>

            <button type="submit" asp-controller="Home" asp-route="@Model.Email" asp-route-id="@Model.Password" asp-action="ChangePasswordButActually" style="background-color:cyan; font-size:25px">Change my password!</button>
        </div>
    </form>
</div>